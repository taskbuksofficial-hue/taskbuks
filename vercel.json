{
    "version": 2,
    "builds": [
        {
            "src": "backend/src/app.ts",
            "use": "@vercel/node"
        },
        {
            "src": "index.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/src/app.ts"
        },
        {
            "src": "/auth/(.*)",
            "dest": "backend/src/app.ts"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}